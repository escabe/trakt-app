<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="horizontal" android:background="@android:drawable/divider_horizontal_dark">
    <ImageView android:src="@drawable/emptyposter" android:id="@+id/imageEpisodeListSeasonPoster" android:layout_marginRight="1px" android:layout_height="@dimen/PosterSmallHeight" android:layout_width="@dimen/PosterSmallWidth"></ImageView>
    <LinearLayout android:id="@+id/linearLayout1" android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="fill_parent">
        <TextView android:text="TextView" android:layout_height="wrap_content" android:id="@+id/textEpisodeListSeasonTitle" android:textSize="16px" android:layout_width="wrap_content"></TextView>
        <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textEpisodeListSeasonDetails"></TextView>
    </LinearLayout>
</LinearLayout>

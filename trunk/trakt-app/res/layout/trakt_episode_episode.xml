<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="horizontal">
    <ImageView android:id="@+id/imageEpisodeListEpisodePoster" android:layout_height="48px" android:layout_width="84px" android:src="@drawable/emptyposter" android:background="@android:color/white" android:layout_margin="1px" android:layout_gravity="center_vertical"></ImageView>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical">
        <TextView android:text="TextView" android:layout_height="wrap_content" android:id="@+id/textEpisodeListEpisodeTitle" android:layout_width="wrap_content"></TextView>
        <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textEpisodeListEpisodeDetails"></TextView>
        <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:layout_width="match_parent">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/iconwatch" android:layout_margin="2px" android:id="@+id/imageEpisodeWatched"></ImageView>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2px" android:id="@+id/imageEpisodeLoved" android:src="@drawable/ic_item_loved_small"></ImageView>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2px" android:id="@+id/imageEpisodeHated" android:src="@drawable/ic_item_hated_small"></ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

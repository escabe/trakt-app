<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:src="@drawable/emptyposter" android:layout_margin="2px" android:layout_height="100px" android:layout_width="70px" android:onClick="imageDetailsPosterOnClick" android:id="@+id/imageEpisodeDetailsPoster"></ImageView>
        <LinearLayout android:layout_height="match_parent" android:layout_width="fill_parent" android:orientation="vertical">
            <TextView android:layout_height="wrap_content" android:textSize="16px" android:text="@string/loading_details" android:layout_width="fill_parent" android:id="@+id/textEpisodeDetailsTitle"></TextView>
            <TextView android:text="@string/loading_details" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/textEpisodeDetailsDetails"></TextView>
            <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="bottom">
                    <ImageView android:layout_height="25px" android:layout_width="34px" android:scaleType="center" android:src="@drawable/buttonlove" android:layout_margin="4px" android:id="@+id/imageEpisodeDetailsLoved"></ImageView>
                    <ImageView android:layout_width="34px" android:scaleType="center" android:layout_height="25px" android:src="@drawable/buttonhate" android:layout_margin="4px" android:id="@+id/imageEpisodeDetailsHated"></ImageView>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="100px">
        <TextView android:layout_height="fill_parent" android:layout_width="fill_parent" android:text="@string/loading_summary" android:id="@+id/textEpisodeDetailsSummary"></TextView>
    </ScrollView>
    <ExpandableListView android:layout_height="fill_parent" android:layout_width="fill_parent" android:id="@id/android:list" android:divider="#000000" android:dividerHeight="1px"></ExpandableListView>
</LinearLayout>
